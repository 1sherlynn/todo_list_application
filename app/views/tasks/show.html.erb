<div class="col-md-10 col-md-offset-1">
<div class="table-responsive">
  <table class="table table table-hover">

	<h1><%= @task.title %></h1>


	    <thead>
	      <tr>
	        <th>Task Description</th>
	        <th>Created Date</th>
	        <th>Due</th>
	        <th>Priority</th>
	        <th>Category</th>
	      </tr>
	    </thead>
	    <tbody>
	      <tr>
	        <td><%= @task.description %></td>
	        <td><%= @task.created_at.strftime("%d %b %Y %A, %I:%S %p") %></td>
	        <td><%= @task.duedate.strftime("%d %b %Y %A") %></td>
	        <td> 
			<% if @task.priority == 1  %>
				<p>High</p>
			<% elsif  @task.priority  == 2 %>
				<p>Medium</p>
			<% else %>
				<p>Low</p>
			<% end %>
	        </td>
	        <td>
		        <% if @task.category_id == 1  %>
					<p>Work</p>
				<% elsif  @task.category_id  == 2 %>
					<p>Groceries</p>
				<% elsif  @task.category_id  == 3 %>
					<p>Family</p>
				<% elsif  @task.category_id  == 4 %>
					<p>Hobby</p>
				<% elsif  @task.category_id  == 5 %>
					<p>Friends</p>
				<% else %>
					<p>Others</p>
				<% end %>
	        </td>
	        <br>
	      </tr>
	    </tbody>
	  </table>
	</div>





<!-- <img src="<%= asset_path 'icandoit' %>" > -->



	<div class="col-md-4 col-md-offset-4">
	<button type="button" class="btn btn-warning btn-lg">
		<%= link_to "Back", root_path %>
	</button>

	<button type="button" class="btn btn-warning btn-lg">
		<%= link_to "Edit", edit_task_path(@task) %> 
	</button>

	<button type="button" class="btn btn-warning btn-lg">
		<%= link_to "Delete", task_path(@task), 
			method: :delete, 
			data: {confirm: "Are you sure you want to delete this task?"} %> 
	</button>
	<br>


	</div>
	

  </table>
</div>

</div>
